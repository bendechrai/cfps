// This is your Prisma schema file
// Learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CFPCache {
  id          String   @id @default(uuid())
  source      String   // e.g. "developers.events" or "joindin"
  rawData     Json     // Store the raw response
  fetchedAt   DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([source])
  @@index([source, fetchedAt])
}

model CanonicalEvent {
  id              String   @id @default(uuid())
  name            String
  normalisedName  String
  cfpUrl          String
  eventUrl        String
  cfpEndDate      DateTime
  eventStartDate  DateTime
  eventEndDate    DateTime
  location        String
  normalisedLocation String
  status          String   // 'open' or 'closed'
  tags            String[] @default([])
  sources         String[] // List of source names that contribute to this event
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  events          Event[]  // Related source events

  @@index([cfpEndDate])
  @@index([eventStartDate])
  @@index([normalisedName, normalisedLocation])
}

model Event {
  id             String         @id @default(uuid())
  sourceId       String         // Original ID from the source
  source         String         // Source name e.g. "developers.events"
  name           String
  cfpUrl         String
  eventUrl       String
  cfpEndDate     DateTime
  eventStartDate DateTime
  eventEndDate   DateTime
  location       String
  status         String         // 'open' or 'closed'
  tags           String[]       @default([])
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  canonicalEvent CanonicalEvent? @relation(fields: [canonicalEventId], references: [id])
  canonicalEventId String?

  @@unique([source, sourceId])
  @@index([cfpEndDate])
  @@index([eventStartDate])
}
