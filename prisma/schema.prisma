// Learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CFPCache {
  id          String   @id @default(uuid())
  source      String   // e.g. "developers.events" or "joindin"
  rawData     Json     // Store the raw response
  fetchedAt   DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([source])
  @@index([source, fetchedAt])
}

model Event {
  id             String   @id @default(uuid())
  sourceId       String   // Original ID from the source
  source         String   // Source name e.g. "developers.events"
  name           String
  cfpUrl         String
  eventUrl       String
  cfpEndDate     DateTime
  eventStartDate DateTime
  eventEndDate   DateTime
  location       String
  status         String   // 'open' or 'closed'
  tags           String[] @default([])
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@unique([source, sourceId])
  @@index([cfpEndDate])
  @@index([eventStartDate])
}
